<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".Preferences.PreferencesColor">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        android:text="Selecciona el teu color preferit"
        android:textColor="@color/white"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">


        <RadioButton
            android:id="@+id/rbtNegre"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:button="@null"
            android:textColor="@color/white"
            android:textStyle="bold" />


        <RadioButton
            android:id="@+id/rbtGris"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:height="70dp"
            android:background="@drawable/gris"
            android:button="@null"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <RadioButton

            android:id="@+id/rbtBlanc"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:background="@color/white"
            android:button="@null"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/rbtMarro"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:background="@drawable/marro"
            android:button="@null"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/rbtTaronja"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:background="@color/orange"
            android:button="@null"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/rbtGroc"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:background="@color/yellow"
            android:button="@null"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/rbtVerd"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:background="@color/green"
            android:button="@null"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/rbtVerdFosc"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:background="#415A24"
            android:button="@null"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/rbtBlau"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:background="@color/blue"
            android:button="@null"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/rbtCian"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:background="@color/teal_200"
            android:button="@null"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/rbtLila"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:background="#7F0095"
            android:button="@null"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/rbtRosa"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:background="#D900FF"
            android:button="@null"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/rbtVermell"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:background="@color/red"
            android:button="@null"
            android:textColor="@color/white"
            android:textStyle="bold" />
    </RadioGroup>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/colorSelect"
        android:layout_width="78dp"
        android:layout_height="78dp"
        android:background="@drawable/bordes_search"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup" />
</androidx.constraintlayout.widget.ConstraintLayout>