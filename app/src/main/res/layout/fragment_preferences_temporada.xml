<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".Preferences.PreferencesTemporada">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        android:text="Per quina temporada vols l'outfit?"
        android:textColor="@color/white"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">


        <RadioButton
            android:id="@+id/rbtEstiu"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/estiu"
            android:button="@null"
            android:textColor="@color/white"
            android:textStyle="bold" />


        <RadioButton
            android:id="@+id/rbtPrimavera"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:height="70dp"
            android:background="@drawable/primavera"
            android:button="@null"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <RadioButton

            android:id="@+id/rbtTardor"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/tardor"
            android:button="@null"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/rbtHivern"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/invierno"
            android:button="@null"
            android:textColor="@color/white"
            android:textStyle="bold" />


    </RadioGroup>

    <TextView
        android:id="@+id/textViewEstacio"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        android:text=""
        android:textColor="@color/white"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup" />

</androidx.constraintlayout.widget.ConstraintLayout>