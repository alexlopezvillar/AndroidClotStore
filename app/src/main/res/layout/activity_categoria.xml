<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductesMenu.ActivityCategoria"
    android:background="@drawable/gradient">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/nomCategoria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="nomCategoria"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="40dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:visibility="invisible"
            android:layout_marginTop="20dp"
            android:id="@+id/tvSamarretes"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginHorizontal="20dp"
            android:text="Samarretes"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/rvSamarretesCategories"
            app:layout_constraintEnd_toEndOf="@+id/rvSamarretesCategories"
            app:layout_constraintStart_toStartOf="@+id/rvSamarretesCategories"
            app:layout_constraintTop_toBottomOf="@+id/nomCategoria" />


        <androidx.recyclerview.widget.RecyclerView
            android:requiresFadingEdge="horizontal|vertical"
            android:visibility="invisible"
            android:id="@+id/rvSamarretesCategories"
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvSamarretes" />

        <TextView
            android:visibility="invisible"
            android:layout_marginTop="20dp"
            android:id="@+id/tvPantalons"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginHorizontal="20dp"
            android:text="Pantalons"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/rvSamarretesCategories"
            app:layout_constraintStart_toStartOf="@+id/rvSamarretesCategories"
            app:layout_constraintTop_toBottomOf="@+id/rvSamarretesCategories" />


        <androidx.recyclerview.widget.RecyclerView
            android:visibility="invisible"
            android:requiresFadingEdge="horizontal|vertical"
            android:id="@+id/rvPantalonsCategories"
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="@+id/tvPantalons"
            app:layout_constraintStart_toStartOf="@+id/tvPantalons"
            app:layout_constraintTop_toBottomOf="@+id/tvPantalons" />

        <TextView
            android:visibility="invisible"
            android:layout_marginTop="10dp"
            android:id="@+id/tvCalcat"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:text="CalÃ§at"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/rvCalcatCategories"
            app:layout_constraintStart_toStartOf="@+id/tvPantalons"
            app:layout_constraintTop_toBottomOf="@+id/rvPantalonsCategories" />


        <androidx.recyclerview.widget.RecyclerView
            android:requiresFadingEdge="horizontal|vertical"
            android:visibility="invisible"
            android:id="@+id/rvCalcatCategories"
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="@+id/tvCalcat"
            app:layout_constraintTop_toBottomOf="@+id/tvCalcat"
            />


        <TextView
            android:visibility="invisible"
            android:id="@+id/tvJaquetes"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:text="Jaquetes"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/tvCalcat"
            app:layout_constraintTop_toBottomOf="@+id/rvCalcatCategories" />


        <androidx.recyclerview.widget.RecyclerView
            android:requiresFadingEdge="horizontal|vertical"
            android:visibility="invisible"
            android:id="@+id/rvJaquetesCategories"
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvJaquetes" />


        <TextView
            android:id="@+id/textViewVEstits"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:text="Vestits"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rvJaquetesCategories"
            android:visibility="invisible"/>


        <androidx.recyclerview.widget.RecyclerView
            android:requiresFadingEdge="horizontal|vertical"
            android:id="@+id/rvVestitsCategories"
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewVEstits" 
            android:visibility="invisible"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>