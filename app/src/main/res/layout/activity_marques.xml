<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductesMenu.ActivityMarques"
    android:background="@drawable/gradient">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/nomMarca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="NomMarca"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvSamarretes"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:text="Samarretes"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        android:visibility="visible"

        app:layout_constraintTop_toBottomOf="@+id/nomMarca"
        tools:layout_editor_absoluteX="20dp" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvSamarretesMarques"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:orientation="horizontal"
        android:requiresFadingEdge="horizontal|vertical"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@+id/tvSamarretes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSamarretes" />

    <TextView
        android:visibility="visible"
        android:layout_marginTop="20dp"
        android:id="@+id/tvPantalons"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginHorizontal="20dp"
        android:text="Pantalons"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/rvSamarretesMarques"
        app:layout_constraintStart_toStartOf="@+id/rvSamarretesMarques"
        app:layout_constraintTop_toBottomOf="@+id/rvSamarretesMarques" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvPantalonsMarques"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:orientation="horizontal"
        android:requiresFadingEdge="horizontal|vertical"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@+id/tvPantalons"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPantalons" />

    <TextView
        android:visibility="visible"
        android:layout_marginTop="10dp"
        android:id="@+id/tvCalcat"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:text="CalÃ§at"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/rvCalcatMarques"
        app:layout_constraintStart_toStartOf="@+id/tvPantalons"
        app:layout_constraintTop_toBottomOf="@+id/rvPantalonsMarques" />


    <androidx.recyclerview.widget.RecyclerView
        android:requiresFadingEdge="horizontal|vertical"
        android:visibility="visible"
        android:id="@+id/rvCalcatMarques"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="@+id/tvCalcat"
        app:layout_constraintTop_toBottomOf="@+id/tvCalcat"
        />


    <TextView
        android:visibility="visible"
        android:id="@+id/tvJaquetes"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:text="Jaquetes"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/tvCalcat"
        app:layout_constraintTop_toBottomOf="@+id/rvCalcatMarques" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvJaquetesMarques"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:orientation="horizontal"
        android:requiresFadingEdge="horizontal|vertical"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@+id/tvPantalons"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvJaquetes" />


    <TextView
        android:visibility="visible"
        android:id="@+id/textViewVEstits"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:text="Vestits"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rvJaquetesMarques" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvVestits"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:orientation="horizontal"
        android:requiresFadingEdge="horizontal|vertical"
        android:visibility="visible"

        app:layout_constraintEnd_toEndOf="@+id/textViewVEstits"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewVEstits" />

</androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>