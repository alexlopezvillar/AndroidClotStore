<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bckg2"
    tools:context=".ProductesMenu.ActivityEstil">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/nomEStil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="NomEStil"
            android:textAlignment="center"
            android:textColor="@color/purple_500"
            android:textSize="40dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvSamarretes"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:text="Samarretes"
            android:textColor="@color/purple_700"
            android:textSize="20dp"
            android:textStyle="bold"
            android:visibility="invisible"

            app:layout_constraintTop_toBottomOf="@+id/nomEStil" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvSamarretesEstilss"
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:orientation="horizontal"
            android:requiresFadingEdge="horizontal|vertical"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="@+id/tvSamarretes"
            app:layout_constraintTop_toBottomOf="@+id/tvSamarretes" />

        <TextView
            android:id="@+id/tvPantalons"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:text="Pantalons"
            android:textColor="@color/purple_700"
            android:textSize="20dp"
            android:textStyle="bold"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="@+id/rvSamarretesEstilss"
            app:layout_constraintStart_toStartOf="@+id/rvSamarretesEstilss"
            app:layout_constraintTop_toBottomOf="@+id/rvSamarretesEstilss" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvPantalonsEstilss"
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:orientation="horizontal"
            android:requiresFadingEdge="horizontal|vertical"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="@+id/tvPantalons"
            app:layout_constraintTop_toBottomOf="@+id/tvPantalons" />

        <TextView
            android:id="@+id/tvCalcat"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:text="CalÃ§at"
            android:textColor="@color/purple_700"
            android:textSize="20dp"
            android:textStyle="bold"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/rvCalcatEstilss"
            app:layout_constraintStart_toStartOf="@+id/tvPantalons"
            app:layout_constraintTop_toBottomOf="@+id/rvPantalonsEstilss" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvCalcatEstilss"
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:orientation="horizontal"
            android:requiresFadingEdge="horizontal|vertical"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="@+id/tvCalcat"
            app:layout_constraintTop_toBottomOf="@+id/tvCalcat" />


        <TextView
            android:id="@+id/tvJaquetes"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:text="Jaquetes"
            android:textColor="@color/purple_700"
            android:textSize="20dp"
            android:textStyle="bold"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="@+id/tvCalcat"
            app:layout_constraintTop_toBottomOf="@+id/rvCalcatEstilss" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvJaquetesEstilss"
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:orientation="horizontal"
            android:requiresFadingEdge="horizontal|vertical"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="@+id/tvJaquetes"
            app:layout_constraintTop_toBottomOf="@+id/tvJaquetes" />


        <TextView
            android:id="@+id/textViewVEstits"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:text="Vestits"
            android:textColor="@color/purple_700"
            android:textSize="20dp"
            android:textStyle="bold"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rvJaquetesEstilss" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvVestitsEstil"
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:orientation="horizontal"
            android:requiresFadingEdge="horizontal|vertical"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="@+id/textViewVEstits"
            app:layout_constraintTop_toBottomOf="@+id/textViewVEstits" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>