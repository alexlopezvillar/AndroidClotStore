<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".ProductesMenu.ActivityTemporades">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/nomTemporada"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="nomTemporada"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="40dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvSamarretes"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:text="Samarretes"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/rvSamarretesTemporades"
            app:layout_constraintStart_toStartOf="@+id/rvSamarretesTemporades"
            app:layout_constraintTop_toBottomOf="@+id/nomTemporada" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvSamarretesTemporades"
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:orientation="horizontal"
            android:requiresFadingEdge="horizontal|vertical"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvSamarretes" />

        <TextView
            android:id="@+id/tvPantalons"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:text="Pantalons"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="@+id/rvSamarretesTemporades"
            app:layout_constraintTop_toBottomOf="@+id/rvSamarretesTemporades" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvPantalonsTemporades"
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:orientation="horizontal"
            android:requiresFadingEdge="horizontal|vertical"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="@+id/rvSamarretesTemporades"
            app:layout_constraintTop_toBottomOf="@+id/tvPantalons" />

        <TextView
            android:id="@+id/tvCalcat"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:text="CalÃ§at"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/rvCalcatTemporades"
            app:layout_constraintStart_toStartOf="@+id/rvPantalonsTemporades"
            app:layout_constraintTop_toBottomOf="@+id/rvPantalonsTemporades" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvCalcatTemporades"
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:orientation="horizontal"
            android:requiresFadingEdge="horizontal|vertical"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="@+id/rvPantalonsTemporades"
            app:layout_constraintTop_toBottomOf="@+id/tvCalcat" />


        <TextView
            android:id="@+id/tvJaquetes"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:text="Jaquetes"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="@+id/tvCalcat"
            app:layout_constraintTop_toBottomOf="@+id/rvVestitsTemporades" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvVestitsTemporades"
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:requiresFadingEdge="horizontal|vertical"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewVEstits" />


        <TextView
            android:id="@+id/textViewVEstits"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:text="Vestits"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="@+id/tvCalcat"
            app:layout_constraintTop_toBottomOf="@+id/rvCalcatTemporades" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvJaquetesTemporades"
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:orientation="horizontal"
            android:requiresFadingEdge="horizontal|vertical"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="@+id/rvVestitsTemporades"
            app:layout_constraintTop_toBottomOf="@+id/tvJaquetes" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>